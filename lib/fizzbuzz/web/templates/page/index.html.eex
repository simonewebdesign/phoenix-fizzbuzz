<h2>Listing Items</h2>

<%= pagination_links @page %>
<table class="table table-items table-hover">
  <thead>
    <tr>
      <th>Value</th>
      <th>Favorited</th>
    </tr>
  </thead>
  <tbody>
<%= for item <- @page do %>
    <tr>
      <td><%= item.value %></td>
      <td class="favorite" data-id="<%= item.id %>"><%= item.favorited %></td>
    </tr>
<% end %>
  </tbody>
</table>
<%= pagination_links @page %>
